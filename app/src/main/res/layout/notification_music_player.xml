<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

        <ImageView
            android:id="@+id/iv_app_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/jetpack_logo" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/iv_app_logo"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/iv_app_logo"
            android:text="This is the message"
            android:textColor="@color/black_700"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_message"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/iv_app_logo"
            android:gravity="center"
            android:text="Song name"
            android:textColor="@color/black_700" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_song_name"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/iv_app_logo"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_play_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_skip_previous"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/iv_play_or_pause"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@id/iv_play_previous"
                android:src="@drawable/ic_baseline_play"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/iv_play_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/iv_play_or_pause"
                android:src="@drawable/ic_baseline_skip_next"
                app:tint="@color/black"/>
    </RelativeLayout>
</RelativeLayout>
