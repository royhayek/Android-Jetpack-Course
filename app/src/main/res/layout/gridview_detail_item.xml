<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.example.androidjetpackcourse.data.model.weather.WeatherDetail"/>

        <variable
            name="weatherDetail"
            type="WeatherDetail" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:background="#3CF1EBF1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_detail_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:icon="@{weatherDetail.icon}"
            android:src="@drawable/ic_sunrise" />

        <TextView
            android:id="@+id/tv_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{weatherDetail.title, default=title}"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_detail_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{weatherDetail.value, default=value}"
            android:textColor="@color/white"
            android:textSize="14dp" />

    </LinearLayout>
</layout>
